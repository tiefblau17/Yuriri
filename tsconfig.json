{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./.webpack/main",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
